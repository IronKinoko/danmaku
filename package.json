{
  "name": "@ironkinoko/danmaku",
  "version": "1.0.1",
  "description": "Display danmaku (flying comments) on HTML5 video.",
  "main": "dist/danmaku.js",
  "module": "dist/esm/danmaku.js",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "types"
  ],
  "types": "types/index.d.ts",
  "scripts": {
    "dev": "npm run bundle -- -w",
    "lint": "eslint src test",
    "unit": "karma start",
    "sauce": "karma start karma.sauce.js",
    "test": "npm run lint && npm run unit",
    "bundle": "rollup -c",
    "build": "npm run bundle",
    "prettier": "prettier -c -w {src,test,types}/**/*",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IronKinoko/danmaku.git"
  },
  "keywords": [
    "danmaku",
    "comment",
    "弹幕",
    "video",
    "audio",
    "live"
  ],
  "author": "IroKinoko<kinoko_main@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IronKinoko/danmaku/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-replace": "^2.3.3",
    "chai": "^4.2.0",
    "es6-promise": "^4.2.8",
    "eslint": "^7.6.0",
    "karma": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-mocha": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-sauce-launcher": "^1.2.0",
    "mocha": "^4.1.0",
    "prettier": "^2.5.1",
    "rollup": "^2.23.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-terser": "^6.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not dead"
  ]
